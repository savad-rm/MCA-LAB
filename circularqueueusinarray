#include<stdio.h>
#include<stdlib.h>
#define N 5
void enqueue();
void dequeue();
void display();
int front=-1,rear=-1,queue[N];

void main()
{
  int choice;
  while(choice != 4)
  {
      printf("\n1.Enqueue \n2.Dequeue \n3.Display \n4.Exit\n");
      printf("Enter your choice:");
      scanf("%d",&choice);
      switch(choice)
      {
          case 1:
          enqueue();
          break;
          case 2:
          dequeue();
          break;
          case 3:
          display();
          break;
          case 4:
          exit(0);
          break;
          default:
          printf("Enter a valid choice");
      }
  }
}

void enqueue()
{
    int item;
    printf("Enter the value");
    scanf("%d",&item);
    if((rear+1)%N == front)
    {
        printf("Overflow");
    }
    if(front == -1 && rear == -1)
    {
        front=rear=0;
    }
    else
    {
      rear=(rear+1)%N;
    }
    queue[rear]=item;
    printf("value inserted");
}
                  
 void dequeue()
 {
     if(front==-1 && rear==-1)
     {
         printf("Underflow");
     }
     else if(front==rear)
     {
         front=rear=-1;
     }
     else
     {
       front=(front+1)%N;
     }
 }     

 void display()
 {
     int i;
     if(rear==-1 && front==-1)
     {
         printf("Queue is empty");
     }
     else
     {
       for(i=front;i<=rear;i++)
       {
           printf("%d",queue[i]);
       }
     }
 }
  
