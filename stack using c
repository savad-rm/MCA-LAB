#include<stdio.h>
#include<stdlib.h>
#define N 20

int stack[N],i,n;
int top=-1;

void push();
void pop();
void display();

int main()
{
	int choice;
	do
	{
		printf("\ninsert\nDelete\nDisplay\nQuit\n");
		printf("Enter Your choicen\n");
		scanf("%d",&choice);
		switch(choice)
		{
			case 1:
				push();
				break;
			case 2:
				pop();
				break;
			case 3:
				display();
				break;
			case 4:
				exit(0);
		}
	}
	while(choice!=4);
	return 0;
}

void push()
{
	if(top==N-1)
	{
		printf("stack is Overflow");
	}
	else
	{
		printf("Enter a number\n");
		scanf("%d",&n);
		top++;
		stack[top]=n;
	}
}

void pop()
{
	if(top==-1)
	{
		printf("stack Underflow");
	}
	else
	{
		printf("the deleted elemnt is %d\n",stack[top]);
		top--;
	}
}

void display()
{
	if(top>=0)
	{
		for(i=top;i>=0;i--)
		{
		 printf("%d\t",stack[i]);
		}
	}
	else
	{
		printf("stack is empty");
	}
}
